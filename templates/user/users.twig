{% extends "layout/layout.twig" %}

{% block js %}
<link rel="stylesheet" type="text/css" href="//cdn.datatables.net/v/ju-1.12.1/jq-3.3.1/dt-1.10.21/datatables.min.css"/>
<script type="text/javascript" src="//cdn.datatables.net/v/ju-1.12.1/jq-3.3.1/dt-1.10.21/datatables.min.js"></script>
<script type="text/javascript" src="../js/user/userData.js"></script>
{% endblock %}


{% block body %}
<input type="button" id="addUserButton" value="註冊">
<table id="userList" style="width:80%">
	<thead>
		<tr>
			<th>帳號</th>
			<th>姓名</th>
			<th>性別</th>
			<th>生日</th>
			<th>信箱</th>
			<th></th>
		</tr>
	</thead>
</table>

<div id="addUserDialog" title="註冊">
<form id="addUserForm" action="">
    帳號 <input type="text" id="uAccount" name="uAccount"> <br>
	姓名 <input type="text" id="uName" name="uName"><br>
	信箱 <input type="text" id="uEmail" name="uEmail"><br>
	生日 <input type="text" id="uBirthday" name="uBirthday"><br>
	性別 <input type="radio" id="uSex1" name="uSex" value='1'> 男生 <input type="radio" id="uSex0" name="uSex" value='0'>女生
</form>
</div>
<div id="deleteUserDialog" title="提示資訊">您確認要刪除這筆資料?</div>

<input type="hidden" id="deleteUserHidden" >
{% endblock %}